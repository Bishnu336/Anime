<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Anime Collection</title>
  <link rel="stylesheet" href="/css/collection.css" />
</head>
<body class="bg">
  <header class="navbar">
    <img src="/images/logo.png" alt="Logo" class="logo" />
    <nav>
      <a href="home">Home</a>
      <a href="/collection">Collection</a>
      <a href="addanime">Add Anime</a>
      <a href="#">Logout</a>
    </nav>
  </header>

  <main class="main-collection">
    <div class="collection-header">
      <h1>COLLECTION</h1>
      <button class="add-btn"><a href="addanime">+ Add New Anime</a></button>
    </div>

    <div class="filter-buttons">
      <button>All</button>
      <button>Watching</button>
      <button>Completed</button>
      <button>Planned</button>
    </div>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Genre</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% animes.forEach(anime => { %>
          <tr data-id="<%= anime.id %>">
            <td class="title"><%= anime.title %></td>
            <td class="genre"><%= anime.genre %></td>
            <td class="status"><%= anime.status %></td>
            <td>
              <button class="edit-btn">Edit</button>
              <button class="delete-btn">Delete</button>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
  <script src="/js/collection.js"></script>
</body>
</html>
