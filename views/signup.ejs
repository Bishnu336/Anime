<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Signup</title>
  <link rel="stylesheet" href="/css/signup.css"/>
</head>
<body>
  <h2>Signup</h2>
  <% if (message) { %>
    <p style="color:red;"><%= message %></p>
  <% } %>

  <form action="/signup" method="POST">
    <input type="text" name="name" placeholder="Name" required /><br>
    <input type="email" name="email" placeholder="Email" required /><br>
    <input type="password" name="password" placeholder="Password" required /><br>


    <div id="adminCodeDiv" style="display:none;">
      <input type="text" name="adminCode" placeholder="Enter Admin Code" />
    </div><br>

    <button type="submit">Sign Up</button>
  </form>

  <p>Already have an account? <a href="/login">Login</a></p>

  <script>
    function toggleAdminCode(role) {
      const adminDiv = document.getElementById('adminCodeDiv');
      adminDiv.style.display = role === 'admin' ? 'block' : 'none';
    }
  </script>
</body>
</html>