<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Panel - Anime Dashboard</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <header>
    <h1>Admin Panel - Anime Dashboard</h1>
  </header>

  <nav>
    <button class="tab" onclick="showTab('users')">Users</button>
    <button class="tab" onclick="showTab('list')">Anime List</button>
    <button class="tab" onclick="showTab('settings')">Settings</button>
    <button class="tab" onclick="showTab('logs')">Logs</button>
  </nav>

  <div class="container">
    <div id="users" class="tab-content">
      <h2>Users</h2>
      <table>
        <tr><th>Username</th><th>Email</th><th>Role</th><th>Status</th><th>Actions</th></tr>
        <tr><td>user123</td><td>user@mail.com</td><td>User</td><td>Active</td>
            <td class="actions"><button>Promote</button><button>Suspend</button></td></tr>
      </table>
    </div>

    <div id="list" class="tab-content" style="display:none">
      <h2>Anime List</h2>
      <table>
        <tr><th>Title</th><th>Genre</th><th>Status</th><th>Submitted By</th><th>Actions</th></tr>
        <tr><td>Your Name</td><td>Romance</td><td>Completed</td><td>animeFan</td>
            <td class="actions"><button>Edit</button><button>Delete</button></td></tr>
      </table>
    </div>

    <div id="settings" class="tab-content" style="display:none">
      <h2>Settings</h2>
      <p>Manage roles, genres, and system settings here.</p>
    </div>

    <div id="logs" class="tab-content" style="display:none">
      <h2>Logs</h2>
      <table>
        <tr><th>User</th><th>Action</th><th>Date</th></tr>
        <tr><td>admin</td><td>Approved Anime: "Your Name"</td><td>2025-05-18</td></tr>
      </table>
    </div>
  </div>

  <script>
    function showTab(tabId) {
      document.querySelectorAll('.tab-content').forEach(tab => tab.style.display = 'none');
      document.getElementById(tabId).style.display = 'block';
      document.querySelectorAll('nav button').forEach(btn => btn.classList.remove('active'));
      event.target.classList.add('active');
    }
  </script>
</body>
</html>
